<Window x:Class="CRUD_interface_sales_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD_interface_sales_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <DockPanel>
            <ToolBar>
                <Button Content="Show Customers" Width="200" Height="40" Margin="5" Click="ShowCustomers_Click"/>
            </ToolBar>

            <ToolBar>
                <Button Content="Show Sallers" Width="300" Height="40" Margin="5" Click="ShowSellers_Click"/>
            </ToolBar>
            <ToolBar>
                <Button Content="Show Sales" Width="300" Height="40" Margin="5" Click="ShowSales_Click"/>
            </ToolBar>
            <DataGrid Name="dataGrid"></DataGrid>
        </DockPanel>

    </Grid>
   
</Window>
